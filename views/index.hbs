<script src="/javascripts/index.js"></script>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="btn-group d-grid mt-5 mb-4 mx-2">
        <button type="button" class="btn btn-block btn-secondary dropdown-toggle dropdown-toggle-split"
          data-bs-toggle="dropdown" aria-expanded="false">
          類別： {{category.name}}
        </button>
        <ul class="dropdown-menu w-100" style="background-color:whitesmoke;">
          <li><a class="dropdown-item" href="?categoryMenu=0">全部</a></li>
          <li><a class="dropdown-item" href="?categoryMenu=1">家居物業</a></li>
          <li><a class="dropdown-item" href="?categoryMenu=2">交通出行</a></li>
          <li><a class="dropdown-item" href="?categoryMenu=3">休閒娛樂</a></li>
          <li><a class="dropdown-item" href="?categoryMenu=4">餐飲食品</a></li>
          <li><a class="dropdown-item" href="?categoryMenu=5">其他</a></li>
        </ul>
      </div>
      <div class="row justify-content-center mb-3">
        <div class="col-5"><strong>總金額:</strong></div>
        <div class="col-6" style="font-size: xx-large;">{{totalAmount}}</div>
      </div>
      <div class="col-11" style="margin-left:auto;margin-right:auto">
        <table id="recordRows" style="width:100%;">
        {{#each records}}
          <tr>
            <td>
              <div class="row mx-2 my-2">
                <div class="col-8">
                  <div class="row">
                    <div id="recordCategoryId"></div>
                    <div class="col-1 m-auto">
                      <script>renderRecordIcon({{ this.categoryId }})</script>
                    </div>
                    <div class="col-11 m-auto">
                      <div>
                        <strong>{{this.name}}</strong>
                      </div>
                      <div>
                        <strong>{{this.date}}</strong>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-2 my-auto pe-1 text-end"><strong>{{this.amount}}</strong></div>
                <div class="col-2 m-auto pe-1 text-end">
                  <a class="btn btn-sm btn-info my-1" href="/records/{{this.id}}/edit">修改</a>
                  <form action="/records/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-sm btn-info my-1">刪除</button>
                  </form>
                </div>
              </div>
            </td>
            </tr>
        {{/each}}
        </table>
        </div>
      <div class="row justify-content-center my-5">
        <div class=" col-5 mx-auto text-center">
          <a class="btn btn-danger" href="/records/new" style="width: 100%;">新增支出</a>
        </div>
      </div>
    </div>
  </div>
</div>
